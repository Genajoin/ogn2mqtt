# Production Environment Configuration for OGN2MQTT
# Copy this file to .env.production and configure for your production environment

# OGN APRS Server Configuration
OGN_APRS_SERVER=aprs.glidernet.org
OGN_APRS_PORT=14580
OGN_APRS_CALLSIGN=OGN2MQTT
OGN_APRS_PASSCODE=-1
OGN_APRS_FILTER=r/46.5/12/400

# Target MQTT Configuration - Connect to existing FANET MQTT broker in traefik network
TARGET_MQTT_URL=mqtt://fanet-mqtt:1884
TARGET_MQTT_CLIENT_ID=ogn2mqtt-bridge
TARGET_MQTT_CLEAN_SESSION=false
TARGET_MQTT_TOPIC=fb/b/ogn/f/1

# Aircraft Types (comma-separated)
# 1=glider, 6=hang_glider, 7=paraglider, 8=aircraft_reciprocating, 9=aircraft_jet
AIRCRAFT_TYPES=1,6,7,8,9

# Geographic Region Filtering (Alps)
REGION_LAT_MIN=44.0
REGION_LAT_MAX=48.0
REGION_LON_MIN=8.0
REGION_LON_MAX=17.0

# Message Rate Limiting
MESSAGE_RATE_LIMIT_SEC=1
MAX_MESSAGE_AGE_MINUTES=60

# Logging
LOG_LEVEL=info
ENABLE_DEBUG=false